execute pathogen#infect()

" THEME LAYOUT
filetype on
syntax on
colorscheme Tomorrow-Night
set colorcolumn=90
set number

" LEADER 
let mapleader=","

" LEADER SHORTCUTS
map <leader>s :source ~/.vimrc<CR>

" SPEED THINGS UP
set hidden
set history=100

" INDENT LOGIC
filetype indent on
set nowrap
set tabstop=2
set shiftwidth=2
set expandtab
set smartindent
set autoindent
